{
	"manifest_version": 3,
	"name": "Youtube Chat Reaction Remover",
	"description": "Removes the chat reaction button in Youtube live chats that partially covers the latest chat message.",
	"version": "1.0",
	"action": {
		"default_popup": "popup/popup.html"
	},
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"64": "images/icon-64.png",
		"128": "images/icon-128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://www.youtube.com/live_chat?*"
			],
			"css": [
				"hide_reaction.css"
			],
			"all_frames": true,
			"run_at": "document_end"
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "youtube-chat-reaction-remover@eventhorizon",
			"strict_min_version": "109.0"
		}
	}
}